<table class="table table-hover">
    <thead>
        <tr><th>順位</th><th colspan="2">タイトル</th><th>コメント</th><th>再生数</th></tr>
    </thead>
    <tbody>
        <% i = 0 %>
        <% @products.each do |item| %>
        <% i += 1%>
        <tr onclick="window.open('http://www.nicovideo.jp<%= item["link"]%>', '_blank');" style="cursor: pointer;">
            <% if i < 4 %>
                <td><h1><span class="label label-warning"><%= i %>位</span></h1></td>
            <% elsif i < 11 %>
                <td><h2><span class="label label-info"><%= i %>位</span></h2></td>
            <% elsif i < 51 %>
                <td><h3><span class="label label-success"><%= i %>位</span></h3></td>
            <% else %>
                <td><h4><span class="label label-default"><%= i %>位</span></h4></td>
            <% end %>
            <td><img src="<%= item["img"] %>" width="160"></td>
            <td><span class="text-info"><%= item["title"] %></span><br /><%= item["date"] %></td>
            <td><%= item["comment"] %></td>
            <td><%= item["view"] %></td>
        </tr>
        <% end %>
    </tbody>
</table>
